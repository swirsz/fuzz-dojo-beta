#!/opt/pwn.college/bash
if [ "$1" = "afl" ]; then
    . /usr/local/sbin/eafl
    shift
else
    . /usr/local/sbin/e
fi
export PROJECT_NAME=e2fsprogs
export SANITIZER=$1
[ -z "$SANITIZER" ] && export SANITIZER='none'
cd $SRC

#apt-get install -y --allow-downgrades --allow-remove-essential --allow-change-held-packages git make texinfo
#git clone --depth 1 https://github.com/tytso/e2fsprogs
cp -r /opt/fuzz-targets/e2fsprogs /src

cp /opt/oss-fuzz/projects/$PROJECT_NAME/build.sh $SRC/
cp -r /opt/oss-fuzz/projects/$PROJECT_NAME/fuzz $SRC/

cd $SRC/$PROJECT_NAME

sudo --preserve-env compile
drivers
