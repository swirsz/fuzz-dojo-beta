#!/opt/pwn.college/bash
. /usr/local/sbin/e
if [ "$?" -gt 0 ]; then
    exit 1
fi
export LABEL=$1
export PROJECT_NAME=zlib
export SANITIZER=$1
if [ -z "$SANITIZER" ]; then
    export SANITIZER='none'
    export LABEL='none'$LABEL
fi

if [ ! -d "/src-orig" ]; then
#----------------------------------------------------------------------
    #apt-get update && apt-get install -y make autoconf automake libtool
    #git clone --depth 1 -b develop https://github.com/madler/zlib.git
    cp -r /downloads/zlib $SRC


    mv /opt/oss-fuzz/projects/$PROJECT_NAME/zlib_uncompress_fuzzer.cc /opt/oss-fuzz/projects/$PROJECT_NAME/zlib_uncompress_fuzzer.c
    mv /opt/oss-fuzz/projects/$PROJECT_NAME/zlib_uncompress2_fuzzer.cc /opt/oss-fuzz/projects/$PROJECT_NAME/zlib_uncompress2_fuzzer.c
    cp /opt/oss-fuzz/projects/$PROJECT_NAME/*_fuzzer.c* $SRC/
    
    
    cp /opt/oss-fuzz/projects/$PROJECT_NAME/build.sh $SRC/

    cp $SRC/minigzip_fuzzer.c $SRC/new_fuzzer.c
    #patch -tuN $SRC/build.sh -i /challenge/.build.patch -r -
#----------------------------------------------------------------------
    build-cleanup
fi
build-srcfolders
mv /src-$LABEL /src

cd $SRC/$PROJECT_NAME
#----------------------------------------------------------------------
if [ ! -d "/home/hacker/fuzz-dojo/$PROJECT_NAME" ]; then
   mkdir -p /home/hacker/fuzz-dojo/$PROJECT_NAME
   cp $SRC/*.c* /home/hacker/fuzz-dojo/$PROJECT_NAME
   cp $SRC/build.sh /home/hacker/fuzz-dojo/$PROJECT_NAME
else
   cp /home/hacker/fuzz-dojo/$PROJECT_NAME/*.c* $SRC
   cp /home/hacker/fuzz-dojo/$PROJECT_NAME/build.sh $SRC
fi
#----------------------------------------------------------------------
if [ ! -z "$2" ]; then
    understanding $2 $3
else
    fuzzlog
    compile
    drivers
fi
mv /src /src-$LABEL
