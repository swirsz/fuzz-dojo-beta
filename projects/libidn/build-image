#!/bin/sh
. /usr/local/sbin/e
export PROJECT_NAME=libidn
[ -z "$SANITIZER" ] && export SANITIZER='none'
cd $SRC

#apt-get update && apt-get install -y pkg-config autopoint autoconf autoconf-archive automake libtool gettext gengetopt curl gperf wget

mkdir /src/tmp
cp -f /src/libidn/fuzz/*.c /src/tmp
rm -rf /src/$PROJECT_NAME

git clone https://git.savannah.gnu.org/git/libidn.git
mv -f /src/tmp/* /src/libidn/fuzz
rmdir /src/tmp

cp /opt/oss-fuzz/projects/$PROJECT_NAME/build.sh $SRC/

cd $SRC/$PROJECT_NAME
compile