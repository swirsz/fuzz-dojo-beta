#!/bin/sh
. /usr/local/sbin/e
export PROJECT_NAME=haproxy
[ -z "$SANITIZER" ] && export SANITIZER='none'
cd $SRC

mkdir $SRC/tmp
mv $SRC/$PROJECT_NAME/*.c $SRC/tmp
rm -rf $SRC/$PROJECT_NAME
git clone https://github.com/haproxy/haproxy
cp /opt/oss-fuzz/projects/$PROJECT_NAME/fuzz* $SRC/
mv $SRC/tmp/* $SRC/$PROJECT_NAME
rmdir $SRC/tmp

cp /opt/oss-fuzz/projects/$PROJECT_NAME/build.sh $SRC/
cd $SRC
if [ ! -d "/home/hacker/$PROJECT_NAME" ]; then
   mkdir ~/$PROJECT_NAME
   cp $SRC/fuzz_cfg_parser.c $SRC/fuzz_newfuzzer.c
   cp $SRC/*.c ~/$PROJECT_NAME
else
   cp ~/$PROJECT_NAME/*.c $SRC
fi
#patch -tuN /src/build.sh -i /challenge/build.patch -r -
compile